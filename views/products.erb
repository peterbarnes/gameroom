<style>
.in {
  float:left;
}
.searchbar {
  padding: 10px;
  padding-left: 27px;
  padding-top: 20px;
}
.searchbar input[type="text"] {
  height: 40px;
  width: 850px;
}
.searchbar button[type="submit"] {
  height: 40px;
  line-height: 100%;
  margin-right: 0;
}
</style>
<div class="searchbar">
  <form id="search" action="/products" method="get">
    <div class="in">
    <input name="query" type="text" placeholder="Find games, consoles, accesories, services, and more">
  </div>
  <div class="btn">
    <button type="submit" value="submit" class="button">Go!</button>
  </div>
  </form>
</div>
<ul>
  <% @results["users"].each do |user| %>
    <li class="person">
      <%= user["first_name"] %> <%= user["last_name"] %>
      <img src="<%= user["gravatar_url"] %>" />
    </li>
  <% end %>
</ul>